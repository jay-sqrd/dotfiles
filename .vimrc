" syntax higlighting
syntax on

" Show line numbers
set number

" Enable auto-indents
set autoindent

"Set tab width to 2 spaces
set tabstop=2
set shiftwidth=2
set expandtab

" Line wrapping at boundaries
set wrap
set linebreak

" Highlight current line
set cursorline

" Spellcheck for markdown GB english
autocmd FileType markdown setlocal spell spelllang=en_gb

" Show matching brackets
set showmatch

